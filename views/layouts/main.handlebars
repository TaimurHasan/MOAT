    <div id="myModal" class="modal">
      <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <p class='modal-text'>Some text in the Modal..</p>
      </div>
    </div>

    <footer>
      An Application by Oceans 11
    </footer>
  </div>
